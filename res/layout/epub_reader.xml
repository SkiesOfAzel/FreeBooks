<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageSwitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/readerPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/readerPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dip"
            android:ellipsize="marquee"
            android:paddingLeft="15dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:singleLine="true"
            android:textStyle="italic"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/readerPageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:paddingRight="15dip"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/readerPageAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dip"
            android:ellipsize="marquee"
            android:paddingLeft="15dip"
            android:paddingTop="3dip"
           android:paddingBottom="3dip"
            android:singleLine="true"
            android:textStyle="italic"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/readerPageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:textSize="14sp" />

        <WebView
            android:id="@+id/readerPageContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/readerPageAuthor"
            android:layout_below="@id/readerPageTitle" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="#999" />

    </RelativeLayout>
    
    <View
        android:id="@+id/readerDummyPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
        
    <View
        android:id="@+id/readerLoadingPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff" />
            
</FrameLayout>